{
  "name": "ScratchTools +",
  "short_name": "ScratchToolsPlus",
  "manifest_version": 3,
  "version": "2.19.1",
  "version_name": "2.19.1",
  "description": "My custom fork of ScratchTools.",
  "author": "rgantzos, JGHQ",
  "background": {
    "service_worker": "/extras/background.js"
  },
  "permissions": ["scripting", "storage", "alarms"],
  "action": {
    "default_icon": "/extras/icon3.png",
    "default_popup": "/extras/popup.html",
    "default_title": "ScratchToolsPlus"
  },
  "icons": {
    "16": "/extras/icon16.png",
    "48": "/extras/icon48.png",
    "128": "/extras/icon128.png"
  },
  "host_permissions": ["https://scratch.mit.edu/"]
}
